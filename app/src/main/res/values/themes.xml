<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Customize your theme here -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Set your splash screen background -->
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <!-- Set your splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_test</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Set the duration for the splash screen icon animation -->
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>
</resources>